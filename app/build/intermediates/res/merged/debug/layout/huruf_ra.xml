        android:id="@+id/ri"
        android:layout_gravity="center_horizontal"/>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@drawable/ru"
        android:id="@+id/ru"
        android:layout_gravity="center_horizontal"/>

    <ImageButton
        android:layout_width="250dp"
