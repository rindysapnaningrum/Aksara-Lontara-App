<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    tools:context="com.example.gcs.lontaraapp.MainActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:src="@drawable/logo"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:background="@drawable/sejarah"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonsejarah"/>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:background="@drawable/huruf"
        android:id="@+id/buttonhuruf"
        android:layout_below="@+id/buttonsejarah"
        android:layout_alignLeft="@+id/buttonsejarah"
        android:layout_alignStart="@+id/buttonsejarah"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:background="@drawable/kuis"
        android:id="@+id/buttonkuis"
        android:layout_below="@+id/buttonhuruf"
        android:layout_alignLeft="@+id/buttonhuruf"
        android:layout_alignStart="@+id/buttonhuruf"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:background="@drawable/about"
        android:id="@+id/buttonabout"
        android:layout_below="@id/buttonkuis"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/buttonkuis"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:background="@drawable/exit"
        android:id="@+id/buttonexit"
        android:layout_alignTop="@id/buttonabout"
        android:layout_toRightOf="@id/buttonabout"
        android:layout_marginLeft="40dp"
        />


</RelativeLayout>
